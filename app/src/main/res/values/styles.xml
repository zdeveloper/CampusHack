<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
    </style>


    <style name="LoginInfoButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_login_info</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LikeButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_like</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">@dimen/button_like_padding</item>
        <item name="android:layout_marginBottom">@dimen/button_like_padding</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Top">
        <item name="android:background">@color/top_item</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Item.TopTransparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Item.Sticky">
        <item name="android:background">@color/sticky_item</item>
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/sticky_item_text</item>
    </style>

    <style name="SubTabButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_like</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/button_like_padding</item>
    </style>

</resources>
