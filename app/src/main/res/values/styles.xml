<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
    </style>

    <style name="LoginInfoButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_login_info</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Top">
        <item name="android:background">@color/top_item</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Item.TopTransparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Item.Sticky">
        <item name="android:background">@color/sticky_item</item>
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/sticky_item_text</item>
    </style>

</resources>
