<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
    </style>


    <style name="LoginInfoButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_login_info</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LikeButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_like</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">@dimen/button_like_padding</item>
        <item name="android:layout_marginBottom">@dimen/button_like_padding</item>
    </style>

    <style name="SubTabButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_sub_tab</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/button_like_padding</item>
        <item name="android:layout_margin">@dimen/sub_tab_margin</item>
    </style>

</resources>
